<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContrastFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="90dp"
            android:accessibilityHeading="true"
            android:text="@string/contrast_ratios"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="298dp"
            android:layout_height="50dp"
            android:layout_marginStart="46dp"
            android:layout_marginTop="60dp"
            android:background="@color/just_past_background"
            android:text="Just past with 4.5:1, HEX: #00e9ff on #5a4dad"
            android:textColor="@color/just_past_foreground"
            android:gravity="center|center_horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.45"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="297dp"
            android:layout_height="50dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="56dp"
            android:background="@color/past_background"
            android:gravity="center|center_horizontal"
            android:text="Passt with 21.0:1, HEX: #ffffff on #000000"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.544"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="284dp"
            android:layout_height="50dp"
            android:layout_marginStart="39dp"
            android:layout_marginTop="60dp"
            android:background="@color/just_fault_background"
            android:text="Just fault with 4.4:1, HEX: #ffffff on #0083a1"
            android:textColor="@color/white"
            android:gravity="center|center_horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.431"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="277dp"
            android:layout_height="50dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="60dp"
            android:background="@color/fault_background"
            android:gravity="center|center_horizontal"
            android:text="Fault with 2.3:1, HEX:  #ffffff on #a0b0a1"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>